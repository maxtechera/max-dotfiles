# GTK 2.0 Configuration - Catppuccin Theme
# This file configures the appearance of GTK 2.0 applications to match the system theme

# Theme settings
gtk-theme-name="Catppuccin-Mocha-Standard-Peach-Dark"
gtk-icon-theme-name="Papirus-Dark"
gtk-font-name="JetBrainsMono Nerd Font 11"
gtk-cursor-theme-name="Catppuccin-Mocha-Dark-Cursors"
gtk-cursor-theme-size=24

# Toolbar settings
gtk-toolbar-style=GTK_TOOLBAR_BOTH_HORIZ
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR

# Menu and button settings
gtk-button-images=1
gtk-menu-images=1

# Sound settings
gtk-enable-event-sounds=0
gtk-enable-input-feedback-sounds=0

# Font rendering settings
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintslight"
gtk-xft-rgba="rgb"
gtk-xft-dpi=96

# Color scheme - Catppuccin Mocha colors
style "catppuccin-default" {
    fg[NORMAL]        = "#cdd6f4"  # Text
    fg[PRELIGHT]      = "#cdd6f4"  # Text (hover)
    fg[SELECTED]      = "#1e1e2e"  # Selected text
    fg[ACTIVE]        = "#cdd6f4"  # Active text
    fg[INSENSITIVE]   = "#6c7086"  # Disabled text
    
    bg[NORMAL]        = "#313244"  # Surface0
    bg[PRELIGHT]      = "#45475a"  # Surface1
    bg[SELECTED]      = "#fab387"  # Peach (accent)
    bg[ACTIVE]        = "#45475a"  # Surface1
    bg[INSENSITIVE]   = "#1e1e2e"  # Base
    
    base[NORMAL]      = "#1e1e2e"  # Base
    base[PRELIGHT]    = "#313244"  # Surface0
    base[SELECTED]    = "#fab387"  # Peach
    base[ACTIVE]      = "#fab387"  # Peach
    base[INSENSITIVE] = "#181825"  # Mantle
    
    text[NORMAL]      = "#cdd6f4"  # Text
    text[PRELIGHT]    = "#cdd6f4"  # Text
    text[SELECTED]    = "#1e1e2e"  # Base
    text[ACTIVE]      = "#1e1e2e"  # Base
    text[INSENSITIVE] = "#6c7086"  # Overlay0
}

# Apply the style to all widgets
class "GtkWidget" style "catppuccin-default"

# Specific widget styling
style "catppuccin-menu" = "catppuccin-default" {
    bg[NORMAL] = "#1e1e2e"  # Base for menus
}

style "catppuccin-menubar" = "catppuccin-default" {
    bg[NORMAL] = "#313244"  # Surface0 for menubars
}

style "catppuccin-tooltip" = "catppuccin-default" {
    bg[NORMAL] = "#1e1e2e"  # Base
    fg[NORMAL] = "#cdd6f4"  # Text
}

# Apply specific styles
class "GtkMenu" style "catppuccin-menu"
class "GtkMenuBar" style "catppuccin-menubar"
widget "gtk-tooltip*" style "catppuccin-tooltip"